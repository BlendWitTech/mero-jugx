{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./*"
            ],
            "@src/*": [
                "../../../src/*"
            ],
            "@shared/*": [
                "../../../shared/*"
            ],
            "@auth/*": [
                "../../../src/auth/*"
            ],
            "@audit-logs/*": [
                "../../../src/audit-logs/*"
            ],
            "@config/*": [
                "../../../src/config/*"
            ],
            "@common/*": [
                "../../../src/common/*"
            ],
            "@database/*": [
                "../../../src/database/*"
            ],
            "@users/*": [
                "../../../src/users/*"
            ],
            "@organizations/*": [
                "../../../src/organizations/*"
            ],
            "@roles/*": [
                "../../../src/roles/*"
            ],
            "@permissions/*": [
                "../../../src/permissions/*"
            ],
            "@notifications/*": [
                "../../../src/notifications/*"
            ],
            "@invitations/*": [
                "../../../src/invitations/*"
            ],
            "@packages/*": [
                "../../../src/packages/*"
            ],
            "@mfa/*": [
                "../../../src/mfa/*"
            ],
            "@nestjs/*": [
                "./node_modules/@nestjs/*"
            ],
            "typeorm": [
                "./node_modules/typeorm"
            ],
            "rxjs": [
                "./node_modules/rxjs"
            ],
            "rxjs/*": [
                "./node_modules/rxjs/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}