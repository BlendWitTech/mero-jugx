{
  "name": "mero-jugx",
  "version": "1.0.0",
  "description": "Organization-based authentication and user management system",
  "author": "Blendwit Tech",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "setup": "node scripts/run-script.js setup",
    "setup:manual": "node scripts/run-script.js setup-manual",
    "setup:docker": "node scripts/run-script.js setup-docker",
    "reset": "node scripts/run-script.js reset",
    "reset:all": "node scripts/run-script.js reset-all",
    "reset:backend": "node scripts/run-script.js reset-backend",
    "reset:frontend": "node scripts/run-script.js reset-frontend",
    "reset:db": "node scripts/run-script.js reset-db",
    "reset:chat": "node scripts/run-script.js reset-chat",
    "dev": "node scripts/run-script.js start-dev",
    "dev:backend": "nest start --watch",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:system-admin:backend": "cd apps/system-admin/backend && npm run start:dev",
    "dev:system-admin:frontend": "cd apps/system-admin/frontend && npm run dev",
    "start": "node scripts/run-script.js start",
    "start:dev": "node scripts/run-script.js start-dev",
    "start:prod": "node scripts/run-script.js start-prod",
    "build": "node scripts/run-script.js build",
    "build:backend": "nest build",
    "build:frontend": "cd frontend && npm run build",
    "test": "node scripts/run-script.js test",
    "test:all": "node scripts/run-script.js test-all",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest --testPathPattern=spec.ts$",
    "test:integration": "jest --testPathPattern=integration.spec.ts$",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "audit:architecture": "ts-node scripts/architecture-migration-audit.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"frontend/src/**/*.{ts,tsx}\" \"apps/**/*.{ts,tsx}\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "db:init": "node scripts/run-script.js db-init",
    "db:check": "node scripts/run-script.js db-check",
    "db:reset": "node scripts/run-script.js reset-db",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/database/migrations/DataSource.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/migrations/DataSource.ts",
    "migration:revert": "node scripts/run-script.js migration-revert",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/database/migrations/DataSource.ts",
    "seed": "ts-node src/database/seeds/run-seeds.ts",
    "seed:run": "ts-node src/database/seeds/run-seeds.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^5.0.1",
    "@nestjs/typeorm": "^10.0.1",
    "@nestjs/websockets": "^10.0.0",
    "@sentry/node": "^10.29.0",
    "@sentry/profiling-node": "^10.29.0",
    "@tanstack/react-query": "^5.90.16",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "clsx": "^2.1.1",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.30.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.562.0",
    "nodemailer": "^7.0.10",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.3",
    "react-router-dom": "^7.11.0",
    "redis": "^4.6.11",
    "reflect-metadata": "^0.1.13",
    "resend": "^3.5.0",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "stripe": "^20.0.0",
    "tailwind-merge": "^3.4.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^10.1.2",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.26",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.38",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
