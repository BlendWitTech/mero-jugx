# ============================================
# MERO JUGX - Railway Production Environment Template
# ============================================
# Copy this file and fill in your production values
# DO NOT commit sensitive values to Git

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
PORT=3000
API_PREFIX=api
API_VERSION=v1

# Update these after Railway generates your domain
APP_URL=https://your-app.railway.app
FRONTEND_URL=https://your-app.railway.app

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Railway auto-provides these via ${{Postgres.XXX}}
# You can use the full connection string:
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Or individual variables:
DB_TYPE=postgres
DB_HOST=${{Postgres.PGHOST}}
DB_PORT=${{Postgres.PGPORT}}
DB_USER=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}
DB_NAME=${{Postgres.PGDATABASE}}

# Database Options
DB_SYNCHRONIZE=false
DB_LOGGING=false

# ============================================
# REDIS
# ============================================
# Railway auto-provides these via ${{Redis.XXX}}
REDIS_URL=${{Redis.REDIS_URL}}

# Or individual variables:
REDIS_HOST=${{Redis.REDIS_HOST}}
REDIS_PORT=${{Redis.REDIS_PORT}}
REDIS_PASSWORD=${{Redis.REDIS_PASSWORD}}

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_STRONG_RANDOM_STRING
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=REPLACE_WITH_ANOTHER_STRONG_RANDOM_STRING
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# SESSION
# ============================================
SESSION_SECRET=REPLACE_WITH_SESSION_SECRET
SESSION_MAX_AGE=86400000

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_SERVICE=resend
RESEND_API_KEY=re_XXXXXXXXXXXXXXXXXXXX
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Mero Jugx

# SMTP Alternative (if not using Resend)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ============================================
# STRIPE PAYMENTS
# ============================================
STRIPE_SECRET_KEY=sk_live_XXXXXXXXXXXXXXXXXXXX
STRIPE_PUBLISHABLE_KEY=pk_live_XXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXX

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ============================================
# SECURITY
# ============================================
CORS_ORIGIN=https://your-app.railway.app
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=https://XXXXXXXXXXXXXXXXXXXX@sentry.io/XXXXXXX

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGS=false
